<div class="container my-5">

  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1 class="mb-3"><%= @restaurant.name %></h1>
      <div class="card p-4 shadow-sm mb-4">
        <p class="lead">
          <i class="fas fa-map-marker-alt text-danger"></i>
          <strong>Address:</strong> <%= @restaurant.address %>
        </p>
        <p>
          <i class="fas fa-phone-alt text-primary"></i>
          <strong>Phone:</strong> <%= @restaurant.phone_number %>
        </p>
        <p>
          <span class="badge bg-info text-dark"><%= @restaurant.category.capitalize %></span>
        </p>
      </div>
      <h2 class="mt-5 mb-3">Reviews (<%= @restaurant.reviews.count %>)</h2>
      <% if @restaurant.reviews.any? %>
        <div class="list-group">
          <% @restaurant.reviews.each do |review| %>
            <div class="list-group-item list-group-item-action flex-column align-items-start mb-2">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 text-warning">
                  <%= '★' * review.rating %>
                  <%= '☆' * (5 - review.rating) %>
                </h5>
              </div>
              <p class="mb-1"><%= review.content %></p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">Sorry, Nothing to show yet...</p>
      <% end %>
      <hr class="my-4">
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-success me-2" %>
      <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
