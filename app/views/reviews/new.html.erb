<div class="container">
  <h1>Add a Review for <%= @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5, label: "Rating (0 a 5)" %>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>
